# Environment variables for AirAware
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/airaware
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=airaware

# Redis Configuration
REDIS_URL=redis://localhost:6379
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379

# API Keys (Required for production)
AIRNOW_API_KEY=your_airnow_api_key_here
NASA_EARTHDATA_USERNAME=your_nasa_username_here
NASA_EARTHDATA_PASSWORD=your_nasa_password_here

# Mapbox Token (Required for frontend)
MAPBOX_TOKEN=your_mapbox_token_here

# Web Push Notifications (Optional)
WEB_PUSH_VAPID_PUBLIC_KEY=your_vapid_public_key_here
WEB_PUSH_VAPID_PRIVATE_KEY=your_vapid_private_key_here
WEB_PUSH_VAPID_EMAIL=your_email@example.com

# Email Notifications (Optional - SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@airaware.com

# SMS Notifications (Optional - Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Application Settings
API_V1_STR=/api/v1
PROJECT_NAME=AirAware
VERSION=1.0.0
ALLOWED_HOSTS=["http://localhost:3000", "http://localhost:8000"]

# Machine Learning
ML_MODEL_PATH=./ml/models/
FORECAST_HORIZON_HOURS=72

# Logging
LOG_LEVEL=INFO

# Development Settings
DEBUG=true
RELOAD=true
